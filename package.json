{
	"name": "util.toolbox-node",
	"version": "0.0.5",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "A set of functions used for build and testing across node projects",
	"debug": false,
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.toolbox-node"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.toolbox-node/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"index.*.min.js",
		"index.d.ts"
	],
	"dependencies": {
		"fs-extra": "^8.0.1",
		"util.constants": "^0.0.27",
		"util.toolbox": "^0.0.83"
	},
	"devDependencies": {
		"@babel/cli": "^7.4.4",
		"@babel/core": "^7.4.5",
		"@babel/plugin-proposal-class-properties": "^7.4.4",
		"@babel/plugin-proposal-decorators": "^7.4.4",
		"@babel/plugin-transform-modules-commonjs": "^7.4.4",
		"@babel/plugin-transform-modules-umd": "^7.2.0",
		"@babel/plugin-transform-runtime": "^7.4.4",
		"@babel/preset-env": "^7.4.5",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.4.5",
		"@types/fs-extra": "7.0.0",
		"@types/jest": "^24.0.14",
		"@types/lodash": "^4.14.134",
		"@types/node": "^12.0.8",
		"@types/uuid": "^3.4.4",
		"@types/yargs": "^13.0.0",
		"babel-loader": "^8.0.6",
		"babel-minify": "^0.5.0",
		"babel-preset-minify": "^0.5.0",
		"coveralls": "^3.0.4",
		"jest": "^24.8.0",
		"prettier": "^1.18.2",
		"tslint": "^5.17.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.2",
		"util.pkgwrap": "^0.0.112",
		"webpack": "^4.34.0",
		"webpack-cli": "^3.3.4"
	},
	"pkgwrap": {
		"cleanup": [
			"docs",
			"tsconfig.tsbuildinfo"
		]
	},
	"scripts": {
		"all": "yarn install && cross-env NODE_ENV=production yarn build && yarn docs && yarn test && yarn manifest",
		"build": "yarn lint && yarn prettier && yarn build:umd && yarn build:es && yarn build:cjs",
		"build:cjs": "babel index.ts --sourceType module --out-file index.cjs.min.js",
		"build:es": "minify index.js --sourceType module --out-file index.es.min.js",
		"build:umd": "pkgwrap --build --webpack",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"docs": "pkgwrap --docs",
		"lint": "pkgwrap --lint",
		"manifest": "npm pack --dry-run",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"test": "jest"
	}
}
